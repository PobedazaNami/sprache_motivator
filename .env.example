# Telegram Bot Token
BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# MongoDB Configuration (required)
# Example: mongodb+srv://user:pass@cluster/dbname or mongodb://localhost:27017/sprache_motivator
MONGODB_URI=mongodb://localhost:27017/sprache_motivator

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Admin User IDs (comma-separated Telegram user IDs)
# Admin @reeziat (ID: 662790795) is pre-configured
ADMIN_IDS=662790795

# Bot Configuration
MAX_CONCURRENT_USERS=100
DAILY_TRAINER_TIMES=08:00,14:00,20:00

# Token Limits (for OpenAI API cost control)
MAX_TOKENS_PER_USER_DAILY=10000
CACHE_TTL_SECONDS=2592000

# Subscription Configuration
# Stripe payment link for â‚¬4/month subscription (translator mode only, trainer is free)
STRIPE_PAYMENT_LINK=https://buy.stripe.com/your_payment_link_here
# Admin contact for support (Telegram username)
ADMIN_CONTACT=@reeziat

# Web App (Mini App) Configuration
# URL where the web app is hosted (e.g., https://yourdomain.com)
# Required for Telegram Mini App feature (flashcards with animations)
WEBAPP_URL=
# Port for the internal web app server (default: 8080)
WEBAPP_PORT=8080

# If you use nginx-proxy (jwilder) + nginx-proxy-acme for automatic HTTPS
# Hostname only (NO https://), e.g. web-app.example.com
WEBAPP_HOST=
